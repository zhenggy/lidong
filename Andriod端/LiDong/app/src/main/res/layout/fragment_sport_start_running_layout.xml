<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginTop="8dp"
    android:background="@color/mainColorWhite"
    android:elevation="1dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="bottom"
            android:text="今日步数"
            android:textColor="@color/wordColorGray"
            android:textSize="@dimen/small_title" />

        <TextView

            android:id="@+id/fragment_sport_today_step_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_weight="3"
            android:gravity="top"
            android:text="0"
            android:textColor="@color/wordColorDeepBlue"
            android:textSize="@dimen/bbig_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/start_running_bt"
            android:layout_width="@dimen/start_running_bt"
            android:layout_height="@dimen/start_running_bt"
            android:layout_gravity="center"
            android:background="@drawable/circular_shape"
            android:elevation="1dp"
            android:gravity="center"
            android:text="开始跑步"
            android:textColor="@color/mainColorWhite"
            android:textSize="@dimen/small_title" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:background="@drawable/adver_tv_circular_shape"
            android:gravity="bottom"
            android:padding="8dp"
            android:text="我的故事"
            android:textColor="@color/mainColorLightBlue"
            android:textSize="@dimen/text_word_tips" />

    </LinearLayout>


</LinearLayout>