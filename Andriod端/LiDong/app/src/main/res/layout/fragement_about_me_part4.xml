<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar"
        android:layout_marginLeft="@dimen/half_space_distance"
        android:layout_marginRight="@dimen/half_space_distance"
        android:layout_marginTop="@dimen/half_space_distance"
        android:background="@drawable/about_me_item_seletor"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="@dimen/select_tab_icon_size"
            android:layout_height="@dimen/select_tab_icon_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_distance"
            android:src="@mipmap/dongtai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_distance"
            android:layout_toRightOf="@id/iv1"
            android:text="动态"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_distance"
            android:src="@drawable/right_arrow_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar"
        android:layout_marginLeft="@dimen/half_space_distance"
        android:layout_marginRight="@dimen/half_space_distance"
        android:layout_marginTop="@dimen/half_space_distance"
        android:background="@drawable/about_me_item_seletor"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="@dimen/select_tab_icon_size"
            android:layout_height="@dimen/select_tab_icon_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_distance"
            android:src="@mipmap/xunzhang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_distance"
            android:layout_toRightOf="@id/iv2"
            android:text="勋章(0)"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_distance"
            android:src="@drawable/right_arrow_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar"
        android:layout_marginLeft="@dimen/half_space_distance"
        android:layout_marginRight="@dimen/half_space_distance"
        android:layout_marginTop="@dimen/half_space_distance"
        android:background="@drawable/about_me_item_seletor"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="@dimen/select_tab_icon_size"
            android:layout_height="@dimen/select_tab_icon_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_distance"
            android:src="@mipmap/shebei" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_distance"
            android:layout_toRightOf="@id/iv3"
            android:text="装备"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_distance"
            android:src="@drawable/right_arrow_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar"
        android:layout_marginLeft="@dimen/half_space_distance"
        android:layout_marginRight="@dimen/half_space_distance"
        android:layout_marginTop="@dimen/half_space_distance"
        android:background="@drawable/about_me_item_seletor"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="@dimen/select_tab_icon_size"
            android:layout_height="@dimen/select_tab_icon_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_distance"
            android:src="@mipmap/shouchang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_distance"
            android:layout_toRightOf="@id/iv4"
            android:text="收藏"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_distance"
            android:src="@drawable/right_arrow_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar"
        android:layout_marginLeft="@dimen/half_space_distance"
        android:layout_marginRight="@dimen/half_space_distance"
        android:layout_marginTop="@dimen/half_space_distance"
        android:background="@drawable/about_me_item_seletor"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="@dimen/select_tab_icon_size"
            android:layout_height="@dimen/select_tab_icon_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_distance"
            android:src="@mipmap/dingdan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_distance"
            android:layout_toRightOf="@id/iv5"
            android:text="订单"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_distance"
            android:src="@drawable/right_arrow_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar"
        android:layout_marginLeft="@dimen/half_space_distance"
        android:layout_marginRight="@dimen/half_space_distance"
        android:layout_marginTop="@dimen/half_space_distance"
        android:background="@drawable/about_me_item_seletor"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="@dimen/select_tab_icon_size"
            android:layout_height="@dimen/select_tab_icon_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_distance"
            android:src="@mipmap/shezhi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_distance"
            android:layout_toRightOf="@id/iv6"
            android:text="设置"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_distance"
            android:src="@drawable/right_arrow_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_about_me_loginout_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar"
        android:layout_marginLeft="@dimen/half_space_distance"
        android:layout_marginRight="@dimen/half_space_distance"
        android:layout_marginTop="@dimen/half_space_distance"
        android:background="@drawable/about_me_item_seletor"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/space_distance"
            android:text="退出登录"
            android:textColor="#ec4836"
            android:textSize="19sp" />


    </RelativeLayout>

</LinearLayout>