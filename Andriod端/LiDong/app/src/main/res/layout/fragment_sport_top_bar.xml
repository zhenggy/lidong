<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_bar"
    android:background="@color/mainColorBlue">


    <ImageView
        android:id="@+id/top_bar_open_drawer_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/space_distance"
        android:scaleType="fitXY"
        android:src="@drawable/navigation_drawer_icon" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="@dimen/space_distance">

        <ImageView
            android:id="@+id/rank_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_rank_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/rank_iv"
            android:gravity="center"
            android:text="排行榜"
            android:textColor="@color/mainColorWhite"
            android:textSize="@dimen/small_title" />
    </RelativeLayout>


</RelativeLayout>