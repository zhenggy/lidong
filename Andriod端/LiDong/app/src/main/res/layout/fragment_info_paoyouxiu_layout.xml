<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/mainColorWhite"
    android:elevation="1dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_distance">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/space_distance"
        android:layout_marginRight="@dimen/space_distance">

        <TextView
            android:id="@+id/small_box"
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@color/mainColorBlue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/small_box"
            android:text="跑友秀"
            android:textSize="@dimen/small_title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="更多"
                android:textColor="@color/wordColorGray"
                android:textSize="@dimen/small_title" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/right_arrow_icon" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_distance"
        android:layout_marginRight="@dimen/space_distance"
        android:layout_marginTop="@dimen/half_space_distance"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pic_size"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/p1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pic_size"
                android:layout_marginLeft="@dimen/pic_margin"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/p2" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pic_size"
                android:layout_marginLeft="@dimen/pic_margin"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/p3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pic_margin">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pic_size"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/p4" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pic_size"
                android:layout_marginLeft="@dimen/pic_margin"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/p5" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pic_size"
                android:layout_marginLeft="@dimen/pic_margin"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/p6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pic_margin">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pic_size"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/p7" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pic_size"
                android:layout_marginLeft="@dimen/pic_margin"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/p8" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pic_size"
                android:layout_marginLeft="@dimen/pic_margin"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/p9" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>