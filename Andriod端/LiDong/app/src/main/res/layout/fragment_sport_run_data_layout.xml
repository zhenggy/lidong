<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="8dp"
    android:background="@color/mainColorWhite"
    android:elevation="1dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_horizontal|bottom"
                android:text="总次数"
                android:textColor="@color/wordColorGray"
                android:textSize="@dimen/small_title" />

            <TextView
                android:id="@+id/fragment_sport_zongcishu_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/wordColorDeepBlue"
                android:textSize="@dimen/bbig_text"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_horizontal|bottom"
                android:text="总用时(h)"
                android:textColor="@color/wordColorGray"
                android:textSize="@dimen/small_title" />

            <TextView
                android:id="@+id/fragment_sport_zongyongshi_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="0.00"
                android:textColor="@color/wordColorDeepBlue"
                android:textSize="@dimen/bbig_text"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_horizontal|bottom"
                android:text="总里程(km)"
                android:textColor="@color/wordColorGray"
                android:textSize="@dimen/small_title" />

            <TextView
                android:id="@+id/fragment_sport_zonglicheng_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="0.00"
                android:textColor="@color/wordColorDeepBlue"
                android:textSize="@dimen/bbig_text"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:alpha="0.5"
        android:background="@color/mainColorBlue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_sport_gps_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="32dp"
                android:alpha="0.6"
                android:src="@drawable/gps_icon_1" />

            <TextView
                android:id="@+id/fragment_sport_gps_tv"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:gravity="bottom"
                android:text="GPS 信号弱"
                android:textColor="@color/wordColorGray"
                android:textSize="@dimen/small_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/space_distance"
                android:gravity="end"
                android:text="PM2.5 86 轻度污染"
                android:textColor="@color/wordColorGray"
                android:textSize="@dimen/small_title" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>